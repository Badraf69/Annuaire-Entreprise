<Page x:Class="WpfApp.FicheEmployePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Fiche Employé">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Nom de l'employé -->
            <RowDefinition Height="*"/>    <!-- Infos employé -->
            <RowDefinition Height="Auto"/>  <!-- Boutons -->
        </Grid.RowDefinitions>

        <!-- Nom de l'employé centré en haut -->
        <TextBlock Grid.Row="0" Text="{Binding lastName}" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10"/>

        <!-- Conteneur des champs alignés à gauche -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Left" Margin="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Information personnelle : " FontFamily="Arial" Width="150" TextDecorations="Underline" LineHeight="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nom : "  Width="100"/>
                <TextBlock Text="{Binding lastName}" LineHeight="20" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Prénom : " Width="100"/>
                <TextBlock Text="{Binding firstName}" LineHeight="20" FontWeight="Bold" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Email : " Width="100"/>
                <TextBlock Text="{Binding email}" LineHeight="20" FontWeight="Bold" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Téléphone fixe : " Width="100"/>
                <TextBlock Text="{Binding phone}" LineHeight="20" FontWeight="Bold" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Téléphone Portable : " Width="120"/>
                <TextBlock Text="{Binding cellPhone}" LineHeight="20" FontWeight="Bold" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Information professionnelle : " FontFamily="Arial" Width="150" TextDecorations="Underline" LineHeight="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Service : " Width="100"/>
                <TextBlock Text="{Binding service}" LineHeight="20" FontWeight="Bold" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Sites : " Width="100"/>
                <TextBlock Text="{Binding sites}" LineHeight="20" FontWeight="Bold" />
            </StackPanel>
        </StackPanel>

        <!-- Boutons en bas -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Modifier" Command="{Binding ModifierCommand}" Width="100" Margin="5"/>
            <Button Content="Supprimer" Command="{Binding SupprimerCommand}" Width="100" Margin="5" Background="Red" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
