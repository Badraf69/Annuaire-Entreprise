<Window x:Class="Annuaire.AddServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Annuaire"
        mc:Ignorable="d"
        Title="Ajout service" Height="200" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,20,0,0" HorizontalAlignment="Center">
            <TextBlock Text="Nom du service:" Margin="0,0,0,10"/>
        </Grid>
        <Grid Grid.Row="1" HorizontalAlignment="Center">
            <TextBox Name="ServiceNameTextBox" Width="250" Height="30" Margin="0,0,0,10"/>
        </Grid>
        <Grid Grid.Row="2" HorizontalAlignment="Center">
            <Button Content="Ajouter" 
                    Width="100" 
                    Height="40" 
                    HorizontalAlignment="Center" 
                    Click="OnAddService"
                    />
        </Grid>
    
    </Grid>
</Window>
