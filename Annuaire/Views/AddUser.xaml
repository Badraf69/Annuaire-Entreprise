<Page x:Class="Annuaire.Views.AddUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Annuaire.Views"
      mc:Ignorable="d"
      Title="AddUser" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Nom d'utilisateur"/>
            <TextBox x:Name="UserNameTextBox" Width="200"/>
            
            <TextBlock Text="Mot de passe"/>
            <PasswordBox x:Name="PasswordBox" Width="200"/>

            <Button Content="Ajouter" Click="AddUserButton_Click" Width="100" Margin="10"/>
            <TextBlock x:Name="StatusMessage" Foreground="Red" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>
