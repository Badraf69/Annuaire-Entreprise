<Page x:Class="Annuaire.Views.ListSitePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Annuaire.Views"
      mc:Ignorable="d"
      Title="ListSitePage" Height="450" Width="800">
    <Grid>
         <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="92*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" >
            <StackPanel VerticalAlignment="Center" >
                <Button Content="Menu" Command="{Binding NavigateToMenuCommand}" Style="{StaticResource buttonNav}" Foreground="White"/>
                <Button Content="Employé" Command="{Binding NavigateToListEmployeeCommand}" Style="{StaticResource buttonNav}" Foreground="White"/>
                <Button Content="Service" Command="{Binding NavigateToListServiceCommand}" Style="{StaticResource buttonNav}" Foreground="White"/>
                <Button Click="BtnRetour_Click" Content="Back" Style="{StaticResource buttonNav}" Foreground="White"/>

            </StackPanel>
        </Grid>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> 
                <RowDefinition Height="*"/>    
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0"  Margin="20">
                <!-- <TextBox Width="150" Text="{Binding NomFiltre}" /> -->
                <!-- <ComboBox Width="150" ItemsSource="{Binding Sites}" SelectedItem="{Binding SelectedSite}" /> -->
                <!-- <ComboBox Width="150" ItemsSource="{Binding Services}" SelectedItem="{Binding SelectedService}" /> -->
                <ComboBox x:Name="ServiceFilter" ItemsSource="{Binding }">

                </ComboBox>
                <Label>Filtre Site :</Label>
                <ComboBox Style="{StaticResource champSearch}">

                </ComboBox>
               
                <Button Content="Ajouter Site" Command="{Binding NavigateToAddEmployeeCommand}" Width="120" BorderThickness="2" BorderBrush="#999190" Margin="0,0,5,0" >
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button> 

            </StackPanel>
            <DataGrid Grid.Row="1" x:Name="ServiceDataGrid" ItemsSource="{Binding Sites}">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Site" Binding="{Binding Ville}" Width="100" />
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100" />

                </DataGrid.Columns>
            </DataGrid>
                    
        <!--<Button Grid.Row="2" Content="Voir fiche" Command="{Binding VoirFicheCommand}" Margin="10"/> -->
        </Grid>
    </Grid>
    </Grid>
</Page>
