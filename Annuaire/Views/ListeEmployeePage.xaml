<Page x:Class="Annuaire.Views.ListeEmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Annuaire.Views"
      mc:Ignorable="d"
      Title="ListeEmployeePage" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="*"/>    
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <!-- <TextBox Width="150" Text="{Binding NomFiltre}" /> -->
            <!-- <ComboBox Width="150" ItemsSource="{Binding Sites}" SelectedItem="{Binding SelectedSite}" /> -->
            <!-- <ComboBox Width="150" ItemsSource="{Binding Services}" SelectedItem="{Binding SelectedService}" /> -->
            <!-- <Button Content="Coucou" Command="{Binding FiltrerCommand}" /> -->
        </StackPanel>
        
        
        <DataGrid Grid.Row="1" x:Name="EmployeeDataGrid" ItemsSource="{Binding Employees}" Margin="10" SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}" SelectionChanged="EmployeesListView_SelectionChanged" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="100" />
                <DataGridTextColumn Header="Prenom" Binding="{Binding FirstName}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="120" />
                <DataGridTextColumn Header="Téléphone" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Mobile" Binding="{Binding CellPhone}" Width="120"/>
                <DataGridTextColumn Header="Service" Binding="{Binding Service.ServiceName}" Width="100"/>
                <DataGridTextColumn Header="Site" Binding="{Binding Site.Ville}" Width="100"/>
                
                
            </DataGrid.Columns>
        </DataGrid>
        
        <!--<Button Grid.Row="2" Content="Voir fiche" Command="{Binding VoirFicheCommand}" Margin="10"/> -->
    </Grid>
</Page>
