<Page x:Class="Annuaire.Employee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Annuaire"
      mc:Ignorable="d"
      Title="Employe" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Barre de filtre -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
            <RowDefinition Height="Auto"/> <!-- Bouton "Voir fiche" -->
        </Grid.RowDefinitions>

        <!-- Barre de filtre -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <TextBox Width="150" Text="{Binding NomFiltre}" />
            <ComboBox Width="150" ItemsSource="{Binding Sites}" SelectedItem="{Binding SelectedSite}" />
            <ComboBox Width="150" ItemsSource="{Binding Services}" SelectedItem="{Binding SelectedService}" />
            <Button Content="Filtrer" Command="{Binding FiltrerCommand}" />
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Employes}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="100" />
                <DataGridTextColumn Header="Prenom" Binding="{Binding Prenom}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="120" />
                <DataGridTextColumn Header="Téléphone" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Mobile" Binding="{Binding CellPhone}" Width="120"/>
                <DataGridTextColumn Header="Service" Binding="{Binding ServiceId}" Width="100"/>
                <DataGridTextColumn Header="Site" Binding="{Binding SiteId}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bouton "Voir fiche" -->
        <Button Grid.Row="2" Content="Voir fiche" Command="{Binding VoirFicheCommand}" Margin="10" />
    </Grid>
</Page>
